<%- include('includes/head') %>
<%- include('includes/nav') %>
  
<div class="container">
  <div class="row">

    <div class="col-lg-2">
    </div>

    <div class="col-lg-8 my-3">
      <h1 class="text-center">Crie sua conta ou entre no appAgenda!</h1>
      <p class="lead text-center">Faça login ou crie sua conta abaixo</p>
      <div class="row">

        <div class="col-lg my-3">
            <h4>Faça seu cadastro</h4>
            <form action="/login/register" method="POST">
                <input type="hidden" name="_csrf" value=<%= csrfToken %>>
                <div class="mb-3">
                  <label class="form-label">Seu email</label>
                  <input type="email" class="form-control" name="email">
                </div>
                <div class="mb-3">
                    <label class="form-label">Sua senha</label>
                    <input type="password" class="form-control" name="password">
                  </div>
                <button type="submit" class="btn btn-primary">Criar minha conta</button>
              </form>
        </div>

        <div class="col-lg my-3">
            <h4>Faça login</h4>
            <form action="/login/login" method="POST">
                <input type="hidden" name="_csrf" value=<%= csrfToken %>>
                <div class="mb-3">
                  <label class="form-label">Seu email</label>
                  <input type="email" class="form-control" name="email">
                </div>
                <div class="mb-3">
                    <label class="form-label">Sua senha</label>
                    <input type="password" class="form-control" name="password">
                  </div>
                <button type="submit" class="btn btn-dark">Entrar</button>
              </form>
        </div>

      </div>
    </div>

    <div class="col-lg-2">
    </div>
  </div>
</div>
    
<%- include('includes/footer') %>
 